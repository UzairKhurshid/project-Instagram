<html>
    <head>
        <title>{{title}}</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

        <!-- jQuery library -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

        <!-- Latest compiled JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="css/style.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
    <body>
       
        <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
            <h3></h3>
            <div class="pull-right">
                <ul class="nav navbar-nav">
                    
                    <a href="/logout">
                        <button type="submit" class="btn navbar-btn btn-danger" name="logout" id="logout"  value="Log Out">Log Out</button>
                    </a>
                </ul>     
            </div>
        </nav>
        

<div class="sidenav">
    <h3>{{username}}</h3>
    <br><br><br><br>
    {{#if private}}
        <a href="/requestToFollow/{{ID}}"><h5>Follow : </h5></a>
    {{/if}}

  <br><br><br><br>  
  {{#if public}}
    <a href="#"><h5>Posts : {{postsCount}}</h5></a>
    <a href="/followers/{{ID}}"><h5>Followers : {{followersCount}}</h5></a>
    <a href="/following/{{ID}}"><h5>Following : {{followingCount}}</h5></a>
  {{else}}
    <a href="#"><h5>Posts : {{postsCount}}</h5></a>
    <a href="#"><h5>Followers : {{followersCount}}</h5></a>
    <a href="#"><h5>Following : {{followingCount}}</h5></a>
  {{/if}}
</div>
        
        {{#if public}}
             <div class="container">
                <div class="row">
                    <div class="col-md-3"></div>
                    {{#each post}}
                        <div class="col-md-6">
                            <div class="div1">
                                <img src="data:image/png;base64, {{profileImage}}" height="60px" width="60px" style="margin-left: 100px;border-radius: 50%;" >
                                <label>{{username}}</label>
                            </div>
                            <div>
                                <img src="images/2.jpg" height="400px" width="400px" style="margin-left: 100px;" >
                            </div>
                            <div class="div1">
                                <a href="likePost/{{this._id}}">
                                    <button class="btn btn-danger" style="width: 80px;margin-left: 100px; margin-top: 10px;">Like</button>
                                </a>
                                <a href="#">
                                    <button class="btn btn-danger" style="width: 80px;margin-left: 5px; margin-top: 10px;">Comment</button>
                                </a>
                            </div>
                        </div>
                    {{/each}}
                    <div class="col-md-3"></div>
                </div>
            </div>
        {{/if}}



        <div class="footer">
            <a href="/">
                <img src="images/home.png" height="50px" width="50px" style="border-radius: 50%;">
            </a>
            <a href="">
                <img src="images/search.png" height="50px" width="50px" style="border-radius: 50%;margin-left: 5px; margin-right: 5px; margin-bottom: 20px;">
            </a>
            <a href="/addNewPost">
                <img src="images/add.png" height="50px" width="50px" style="border-radius: 50%;margin-left: 5px; margin-right: 5px; margin-bottom: 50px;">
            </a>
            <a href="request">
                <img src="images/heart.png" height="50px" width="50px" style="border-radius: 50%;margin-left: 5px; margin-right: 5px; margin-bottom: 20px;">
            </a>
            <a href="/personalAccount">
                <img src="images/profile2.png"  height="50px" width="50px" style="border-radius: 50%;">
            </a>
        </div>
    </body>
</html>