<html>
    <head>
        <title>{{title}}</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

        <!-- jQuery library -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

        <!-- Latest compiled JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="css/style.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
    <body>
       
        <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
            <h3></h3>
            <div class="pull-right">
                <ul class="nav navbar-nav">
                    
                    <a href="/logout">
                        <button type="submit" class="btn navbar-btn btn-danger" name="logout" id="logout"  value="Log Out">Log Out</button>
                    </a>
                </ul>     
            </div>
        </nav>
        
<div class="sidenav">
    <h1 style="color: white;">{{username}}</h1>
    <br><br><br><br>

    <br><br><br><br>  
  <a href=""><h5>Posts : {{postsCount}}</h5></a>
  <a href="/followers/{{ID}}"><h5>Followers : {{followersCount}}</h5></a>
  <a href="/following/{{ID}}"><h5>Following : {{followingCount}}</h5></a>
  <a href="/savedPosts"><h5>saved Posts : {{savedPostsCount}} </h5></a>
</div>
         
 <div class="container">
            <div class="row">
                <div class="col-md-3"></div>
                {{#if posts}}
                    {{#each posts}}
                        <div class="col-md-6">
                            <div class="div1">
                                <img src="data:image/jpeg;base64, {{../profileImage}}" height="60px" width="60px" style="margin-left: 100px;border-radius: 50%;" >
                            </div>
                            {{#each this.postImage}}
                                <div style="margin-bottom: 100px;">
                                    <img src="data:image/jpeg;base64, {{this.img}}" height="400px" width="400px" style="margin-left: 100px;" >
                                    <br>
                                    <h4 style="margin-left: 100px;">Likes: {{likeCount}}</h4>
                                    <h2  style="margin-left: 100px;">{{../this.postCaption}}</h2>
                                    <br><br>
                                    <a href="/likePost/{{../this._id}}" style="margin-left: 100px; width: 400px;" class="btn btn-primary">Like</a>
                                </div>
                            {{/each}}
                            <div class="div1">
                               
                            </div>
                        </div>
                    {{/each}}
                {{/if}}
                <div class="col-md-3"></div>
            </div>
        </div>



        <div class="footer">
            <a href="/">
                <img src="images/home.png" height="50px" width="50px" style="border-radius: 50%;">
            </a>
            <a href="">
                <img src="images/search.png" height="50px" width="50px" style="border-radius: 50%;margin-left: 5px; margin-right: 5px; margin-bottom: 20px;">
            </a>
            <a href="/addNewPost">
                <img src="images/add.png" height="50px" width="50px" style="border-radius: 50%;margin-left: 5px; margin-right: 5px; margin-bottom: 50px;">
            </a>
            <a href="request">
                <img src="images/heart.png" height="50px" width="50px" style="border-radius: 50%;margin-left: 5px; margin-right: 5px; margin-bottom: 20px;">
            </a>
            <a href="/personalAccount">
                <img src="images/profile2.png"  height="50px" width="50px" style="border-radius: 50%;">
            </a>
        </div>
    </body>
</html>